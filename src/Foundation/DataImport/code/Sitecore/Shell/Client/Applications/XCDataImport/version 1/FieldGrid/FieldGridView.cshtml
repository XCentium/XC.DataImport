    userControl.Requires.Script("/sitecore/shell/client/Applications/XCDataImport/version 1/FieldGrid/FieldGridView.js");

    var cssClass = "sc-FieldGridView";

    var htmlAttributes = userControl.HtmlAttributes;
    userControl.AppendClass(cssClass);
}
